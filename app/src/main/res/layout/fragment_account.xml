<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:windowBackground"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewProfileAvatar"
            android:layout_width="@dimen/large_image_size"
            android:layout_height="@dimen/large_image_size"
            android:layout_marginTop="@dimen/base_margin_size"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/default_profile_avatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewUsername"
            style="@style/ExtraLargeTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/base_margin_size"
            android:layout_marginTop="@dimen/base_margin_size"
            android:layout_marginEnd="@dimen/base_margin_size"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/three_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewProfileAvatar" />

        <TextView
            android:id="@+id/textViewMyBlog"
            style="@style/TextViewInListWithDrawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/my_blog"
            app:drawableStartCompat="@drawable/ic_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewUsername" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewMyBlog"
            app:layout_constraintEnd_toEndOf="@id/textViewMyBlog"
            app:layout_constraintTop_toTopOf="@id/textViewMyBlog" />

        <TextView
            android:id="@+id/textViewStatistics"
            style="@style/TextViewInListWithDrawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            app:drawableStartCompat="@drawable/ic_statistics"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewMyBlog" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewStatistics"
            app:layout_constraintEnd_toEndOf="@id/textViewStatistics"
            app:layout_constraintTop_toTopOf="@id/textViewStatistics" />

        <TextView
            android:id="@+id/textViewCredits"
            style="@style/TextViewInListWithDrawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/CR_credits"
            app:drawableStartCompat="@drawable/ic_logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewStatistics" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewCredits"
            app:layout_constraintEnd_toEndOf="@id/textViewCredits"
            app:layout_constraintTop_toTopOf="@id/textViewCredits" />

        <TextView
            android:id="@+id/textViewDownloads"
            style="@style/TextViewInListWithDrawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/downloads"
            app:drawableStartCompat="@drawable/ic_download"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewCredits" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewDownloads"
            app:layout_constraintEnd_toEndOf="@id/textViewDownloads"
            app:layout_constraintTop_toTopOf="@id/textViewDownloads" />

        <TextView
            android:id="@+id/textViewSettings"
            style="@style/TextViewInListWithDrawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            app:drawableStartCompat="@drawable/ic_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewDownloads" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewSettings"
            app:layout_constraintEnd_toEndOf="@id/textViewSettings"
            app:layout_constraintTop_toTopOf="@id/textViewSettings" />

        <TextView
            android:id="@+id/textViewSignOut"
            style="@style/TextViewInListWithDrawable"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            app:drawableStartCompat="@drawable/ic_log_out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewSettings" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewSignOut"
            app:layout_constraintEnd_toEndOf="@id/textViewSignOut"
            app:layout_constraintTop_toTopOf="@id/textViewSignOut" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewSignOut" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>