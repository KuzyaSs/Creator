<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/medium_margin_size"
    android:layout_marginVertical="@dimen/medium_margin_size">

    <TextView
        android:id="@+id/textViewUnselectedDurationInMonths"
        style="@style/LargeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/container_background"
        android:paddingHorizontal="@dimen/base_margin_size"
        android:paddingVertical="@dimen/medium_margin_size"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1 month" />

    <TextView
        android:id="@+id/textViewSelectedDurationInMonths"
        style="@style/LargeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/container_background"
        android:backgroundTint="@color/colorAccent"
        android:paddingHorizontal="@dimen/base_margin_size"
        android:paddingVertical="@dimen/medium_margin_size"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1 month" />

</androidx.constraintlayout.widget.ConstraintLayout>