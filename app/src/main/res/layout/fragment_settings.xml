<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTitle"
            style="@style/CardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:windowBackground"
            app:cardElevation="@dimen/base_margin_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewTitleWithBackButton"
                style="@style/TitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/base_margin_size"
                android:drawablePadding="@dimen/small_margin_size"
                android:paddingTop="@dimen/small_margin_size"
                android:paddingBottom="@dimen/small_margin_size"
                android:text="@string/settings"
                app:drawableStartCompat="@drawable/ic_back" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewEditProfile"
            style="@style/TextViewInList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardViewTitle" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewEditProfile"
            app:layout_constraintEnd_toEndOf="@id/textViewEditProfile"
            app:layout_constraintTop_toTopOf="@id/textViewEditProfile" />

        <TextView
            android:id="@+id/textViewChooseCategory"
            style="@style/TextViewInList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/choose_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewEditProfile" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewChooseCategory"
            app:layout_constraintEnd_toEndOf="@id/textViewChooseCategory"
            app:layout_constraintTop_toTopOf="@id/textViewChooseCategory" />

        <TextView
            android:id="@+id/textViewChangePassword"
            style="@style/TextViewInList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/change_password"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewChooseCategory" />

        <ImageView
            android:layout_width="@dimen/small_icon_size"
            android:layout_height="@dimen/small_icon_size"
            android:importantForAccessibility="no"
            android:scaleX="-1"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="@id/textViewChangePassword"
            app:layout_constraintEnd_toEndOf="@id/textViewChangePassword"
            app:layout_constraintTop_toTopOf="@id/textViewChangePassword" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base_margin_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewChangePassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>