<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout">
        <item name="android:textColorHint">?android:textColorPrimary</item>
        <item name="boxStrokeColor">?attr/colorAccent</item>
        <item name="endIconTint">?android:textColorPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:drawablePadding">@dimen/small_margin_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/base_font_size</item>
        <item name="drawableStartCompat">@drawable/ic_error</item>
    </style>

    <style name="BaseTextView">
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:backgroundTint">?attr/colorAccent</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="indicatorColor">?attr/colorAccent</item>
    </style>

    <style name="BottomNavigationActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
        <item name="marginHorizontal">0dp</item>
        <item name="android:color">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationText">
        <item name="android:textSize">@dimen/small_font_size</item>
        <item name="fontFamily">sans-serif-thin</item>
    </style>

    <style name="LabelTextView" parent="BaseTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/base_margin_size</item>
        <item name="android:layout_marginTop">@dimen/small_margin_size</item>
        <item name="android:layout_marginEnd">@dimen/base_margin_size</item>
        <item name="android:background">@drawable/label_background</item>
        <item name="android:drawablePadding">@dimen/small_margin_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/base_margin_size</item>
        <item name="android:textSize">@dimen/base_font_size</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="drawableTint">?android:textColorPrimary</item>
    </style>
</resources>