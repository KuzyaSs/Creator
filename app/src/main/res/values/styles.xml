<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextInputLayout">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="boxStrokeColor">@color/purple</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="endIconTint">?attr/colorPrimary</item>
    </style>

    <style name="TextInputEditText">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ErrorTextView">
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:visibility">gone</item>
        <item name="drawableStartCompat">@drawable/ic_error</item>
    </style>

    <style name="BasicTextView">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple</item>
    </style>

    <style name="ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminate">true</item>
        <item name="android:visibility">gone</item>
        <item name="indicatorColor">@color/purple</item>
    </style>
</resources>