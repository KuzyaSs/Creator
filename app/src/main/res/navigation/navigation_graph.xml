<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/signInFragment">

    <fragment
        android:id="@+id/feedFragment"
        android:name="ru.ermakov.creator.presentation.fragment.FeedFragment"
        android:label="FeedFragment" />

    <fragment
        android:id="@+id/chatsFragment"
        android:name="ru.ermakov.creator.presentation.fragment.ChatsFragment"
        android:label="ChatsFragment" />

    <fragment
        android:id="@+id/accountFragment"
        android:name="ru.ermakov.creator.presentation.fragment.AccountFragment"
        android:label="AccountFragment" />

    <fragment
        android:id="@+id/signInFragment"
        android:name="ru.ermakov.creator.presentation.fragment.SignInFragment"
        android:label="SignInFragment">
        <action
            android:id="@+id/action_signInFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="ru.ermakov.creator.presentation.fragment.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signUpFragment_to_verificationEmailFragment"
            app:destination="@id/verificationEmailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/verificationEmailFragment"
        android:name="ru.ermakov.creator.presentation.fragment.VerificationEmailFragment"
        android:label="VerificationEmailFragment">
        <action
            android:id="@+id/action_verificationEmailFragment_to_signInFragment"
            app:destination="@id/signInFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/signInFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>
</navigation>